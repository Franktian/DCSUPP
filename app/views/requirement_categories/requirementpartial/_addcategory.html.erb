<%= form_for :requirement_subcategories, :url => '/requirement_subcategories#create', :remote => true, 
    :html => {:id => "input_form"} do |f| %> 

    <%= f.text_field :item_title, placeholder: "Category Label", :class => "form-control span70" %>

    <%= f.hidden_field :category, :value => "test" %>
    <%= f.hidden_field :input_type, :value => "inputNumber" %>
    <br>

    <div class="row"> 

        <div class="col-xs-3">
            <b>Category Name: </b><p><div id='CategoryType'>[None]</div></p>

            <div id="selectType">
                <%= f.label :column_type, "Input Type: " %><br>
                <%= f.select(:column_type, [["Input Number", 1], ["Input Date", 2], ["Boolean", 3],
                        ["Input Field", 4]]) %>
            </div>
        </div>

        <div class="col-xs-9">
            <b>Output:<b>
        </div>
    </div>

    <div id="inputNumber">
        <hr>
        <p>Input Single Number e.g. [CSC 412 grade: Min 0, Max 100]</p>
        
        <%= check_box_tag(:min_value) %>
        <%= label_tag(:min_value, "Add Minimum Value") %>
        <%= f.text_field :minimumValue, placeholder: "Minimum value", :class => "form-control span40" %>
        <br>
        <%= check_box_tag(:max_value) %>
        <%= label_tag(:max_value, "Add Maximum Value") %>
        <%= f.text_field :maximumValue, placeholder: "Maximum value", :class => "form-control span40" %>
        <br>
        <%= check_box_tag(:decimal) %>
        <%= label_tag(:decimal, "Allow Decimals") %>
    </div>

    <div id="inputDate" class="hidden_class">
        <hr>
        <p>Input Single Date e.g. [Graduate Date: December 4, 2015]</p>

        <%= check_box_tag(:before_date) %>
        <%= label_tag(:before_date, "Add Earliest Date") %><br>
        <%= select_date Date.today, prefix: :start_date %>

        <br><br>
        <%= check_box_tag(:after_date) %>
        <%= label_tag(:after_date, "Add Latest Date") %><br>
        <%= select_date Date.today, prefix: :start_date %><br>
    </div>

    <div id="inputBoolean" class="hidden_class">
        <hr>
        <p>Simple CheckBox: e.g. International Student</p>

        <%= check_box_tag(:before_date) %>
        <%= label_tag(:before_date, "Default True") %>
    </div>

    <div id="inputfield" class="hidden_class">
        <hr>
        <p>Input Field: e.g. Email Regex: [A-Z0-9._%+-]+@[A-Z0-9.-]+\.[A-Z]{2,4}</p>

        <%= check_box_tag(:regex) %>
        <%= label_tag(:regex_equation, "Set Regex") %>
        <%= f.text_field :minimumValue, placeholder: "Regex expression", :class => "form-control span40" %><br>

        <%= check_box_tag(:max_str_len) %>
        <%= label_tag(:max_str_len, "Set Maximum Length") %>
        <%= f.text_field :minimumValue, placeholder: "Maximum Length", :class => "form-control span40" %><br>

        <%= check_box_tag(:min_str_len) %>
        <%= label_tag(:min_str_len, "Set Minimum Length") %>
        <%= f.text_field :minimumValue, placeholder: "Minimum Length", :class => "form-control span40" %><br>

        <%= check_box_tag(:placeholder) %>
        <%= label_tag(:placeholder, "Add Input Placeholder") %>
        <%= f.text_field :placeholder_value, placeholder: "Placeholder", :class => "form-control span40" %><br>

    </div>

    <br>

    <%= f.submit "Add New Requirement", class: "btn btn-default"  %>

<% end %>