<h3>Welcome, <%= @current_user.name %></h3>

<hr>

<% if @current_user.student_setting && @current_user.student_setting.settings_initalized %>

	<p><b>Student Info A:</b> <%= @current_user.student_setting.student_info_A %></p>

	<br>

	<p><b>Student Info B:</b> <%= @current_user.student_setting.student_info_B %></p>
	<br>

	<p><b>Student Info C:</b> <%= @current_user.student_setting.student_info_C %></p>
	<br>

	<p><b>Student Info D:</b> <%= @current_user.student_setting.student_info_D %></p>
	<br>

	<p><b>Student Info F:</b> <%= @current_user.student_setting.student_info_F %></p>
	<br>

<% else %>

	<p>You have not initialized your settings</p>

<% end %>

<%= form_for @current_user, :url => url_for(:controller => "users", 
    :action => "change"), :remote => true do |f| %>

	<%= f.submit "Update Student Settings", class: "btn btn-default btn-med" %>

<% end %>

	